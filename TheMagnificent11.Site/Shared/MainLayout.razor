@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudLink Href="/">
            <MudImage
                Src="octocat-themagnificent11.png"
                Alt="TheMagnificent11 Octocat"
                Height="50"
                Width="50" />
        </MudLink>
        <MudSpacer />
        <MudIconButton
            Icon="@Icons.Custom.Brands.GitHub"
            Color="Color.Inherit"
            Link="https://github.com/TheMagnificent11"
            Target="_blank" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
